// manifest.json (v1.7.5)
{
  "name": "Task Card & Mirroring Power‑Up",
  "version": "1.7.5",
  "description": "Creates a Task Checklist and lets you convert its items into cards.",
  "connectors": {
    "iframe": {
      "url": "https://birdieligos.github.io/trello-powerup-test/index.html?cb=1.7.5"
    }
  },
  "capabilities": [
    "authorization-status",
    "show-authorization",
    "card-buttons",
    "card-badges",           ← required to stub front‑of‑card badges  
    "card-detail-badges",    ← your “Create Task Card” under each item  
    "card-back-section"      ← required to stub the back‑of‑card section  
  ],
  "icon": {
    "url": "https://birdieligos.github.io/trello-powerup-test/icon.jpeg"
  }
}
